<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TaxiBooking." parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorSecondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="button_style" parent="Theme.MaterialComponents.Light">
        <item name="backgroundTint">@color/orange</item>
        <item name="android:padding">28dp</item>
        <item name="fontFamily">@font/didactfothic_regular</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="google_button_style" parent="Theme.MaterialComponents.Light">
        <item name="backgroundTint">@android:color/white</item>
        <item name="android:padding">28dp</item>
        <item name="fontFamily">@font/didactfothic_regular</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/didactfothic_regular</item>
    </style>


    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/colorSecondaryText</item>
        <item name="queryHint">Search...</item>
        <item name="android:inputType">textCapWords</item>
        <item name="queryBackground">@android:color/transparent</item>
    </style>


</resources>